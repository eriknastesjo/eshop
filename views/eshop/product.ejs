<%- include("../partials/header.ejs", {title: title}); %>
<div class="bg"></div>
<div class="bg bg2"></div>
<div class="bg bg3"></div>

<div class="content">
    <h1>Produkter</h1>

    <p>Produkt Lista</p>

    <table>
        <tr>
            <th>Produktnamn</th>
            <th>Produktbeskrivning</th>
            <th>Produktpris</th>
            <th>Antal</th>
            <th>Grundkategori</th>
            <th>Kategori</th>
        </tr>
        <% for (const row of res) { %>
        <tr>
            <td><%= row.produktnamn %></td>
            <td><%= row.produktbeskrivning %></td>
            <td><%= row.produktpris %> kr</td>
            <td>
                <% if (row.antal) { %>
                    <%= row.antal %> st
                <%} else { %>
                    Tillf√§lligt slut
                <% } %>
            </td>
            <td><%= row.grundkategori %></td>
            <td><%= row.kategori %></td>
        </tr>
        <% }; %>
    </table>
</div>

<%- include("../partials/footer.ejs"); %>